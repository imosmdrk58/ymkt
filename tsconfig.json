{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["dom", "ESNext", "DOM.Iterable"],
        "allowJs": true,
        "jsx": "react-jsx",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types"],
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@common/*": ["src/common/*"]
        }
    }
}
